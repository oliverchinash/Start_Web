<div id="divBrandCanvas" class="am-offcanvas">
    <div class="am-offcanvas-bar am-offcanvas-bar-flip">
        <div class="am-offcanvas-content">
            <!----品牌页面开始------>
            <div class="brand">
                <!-------固定部分元素开始--------->
                <div class="brand-top" data-am-sticky>
                    <!----header开始------>
                    <header data-am-widget="header" class="am-header header">
                        <div class="am-header-left am-header-nav">
                            <a href="javascript:void(0)" class=""  onclick="FunCloseCanvas('divBrandCanvas')">
                                <i class="am-header-icon am-icon-angle-right am-icon-md">返回</i>
                            </a>
                        </div>
                        <h1 class="am-header-title">
                            <a href="javascript:void(0)">
                                品牌
                            </a>
                        </h1>
                    </header>
                    <!----header结束------>
                    <!-----查询全部开始------>
                    <ul class="am-list  brand-all">
                        <li>
                            <a href="javascript:void(0)" style="padding: 0;" onclick="FunSearch(1)">
                                查询全部
                                <span class="am-list-icon am-icon-angle-right am-fr" style="padding-right: 1rem"></span>
                            </a>
                        </li>
                    </ul>
                    <!-----查询全部结束----->
                </div>
                <!----固定元素结束------>
                @{
                    int _classid = Model;
                    IList<SuperMarket.Model.VWTreeBrandEntity> list = SuperMarket.BLL.CatograyDB.BrandBLL.Instance.GetTreeBrandAll(_classid);
                    if (list != null && list.Count > 0)
                    {
                        foreach (SuperMarket.Model.VWTreeBrandEntity entity in list)
                        {
                            <div class="brand-A am-cf" style="margin-top: .6rem">
                                <p>@entity.PYFirst</p> 
                                @if (entity.Children != null && entity.Children.Count > 0)
                                {
                                    foreach (SuperMarket.Model.VWTreeBrandEntity entity2 in entity.Children)
                                    {
                                        <div data-am-widget="list_news" class="am-list-news am-list-news-default am-cf">
                                            <ul class="am-list">
                                                <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-left">
                                                    <a href="javascript:void(0)" onclick="FunSelectBrand(@entity2.Id)">
                                                        <div class="am-u-sm-2 am-list-thumb">
                                                            @*<img src="/Themes/Basic/img/brand_tp1.png" />*@
                                                        </div>
                                                        <div class="am-u-sm-10 am-list-main">
                                                            @entity2.Name
                                                        </div>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    } 
                                } 
                            </div>
                        }

                    }
                } 

            </div>
            <!----品牌页面结束----->
        </div>
    </div>
</div>

<div style="display:none;"><span id="spanselectbrand" spanval="" spanname="">@ViewBag.SelectBrandId</span></div>