        <div class="product-list-main" id="divproductlistbox">
            @{
                IList<JiChen.Entities.VWProductEntity> list = ViewBag.ProductList;
                if (list != null && list.Count > 0)
                { <div class="list" id="divproductlist">
                @foreach (JiChen.Entities.VWProductEntity _productentity in list)
                {
                    <div data-am-widget="list_news" class="am-list-news am-list-news-default am-cf">
                        <div class="am-list-news-bd">
                            <ul class="am-list"> 
                                <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-left">
                                    <div class="am-u-sm-4 am-list-thumb">
                                        <a href="/MobileProduct/Detail?pd=@(_productentity.ProductDetailId)" class="">
                                            <img src="@(JiChen.Core.ConfigCore.Instance.ConfigCommonEntity.ImagesServerUrl + _productentity.PicUrlList)" class="am-img-responsive" />
                                        </a>
                                    </div>
                                    <div class="am-u-sm-8 am-list-main">
                                        <h3 class="am-list-item-hd"><a href="/MobileProduct/Detail?pd=@(_productentity.ProductDetailId)" class="">@_productentity.AdTitle</a></h3>

                                        <div class="am-list-item-text">价格:@(_productentity.ActualPrice == 0 ? "会员可见" : _productentity.ActualPrice >=JiChen.Entities.CommonKey.MaxPrice?"实时报价": _productentity.ActualPrice.ToString("0.00"))</div>
                                        <div class="am-list-item-desced">
                                            <div class="am-fl" style="margin-top: .5rem; line-height:1.8rem">
                                                <input id="txtProductNum@(_productentity.ProductDetailId)" style="width:100px;" class="alignment" hascreate="0"   value="1" />
                                            </div>
                                            @if (_productentity.ActualPrice >= JiChen.Entities.CommonKey.MaxPrice)
                                            {

                                            }
                                            else
                                            {
                                                <div class="am-fr clsaddtocart" jishi="@(_productentity.JiShiSong)" ProductDetailId="@(_productentity.ProductDetailId)" style="border: 1px solid #FF5000; border-radius: .5rem;padding: .3rem .5rem; color:#FF5000 ">加入购物车</div>
                                            }
                                         </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
                }
            }

            </div>
        <!---------列表内容结束------------>
