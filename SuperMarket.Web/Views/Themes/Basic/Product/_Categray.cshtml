
<!doctype html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>易店心分类</title> 
    <meta name="renderer" content="webkit"> 
    <meta http-equiv="Cache-Control" content="no-siteapp" /> 
    <link rel="shortcut icon" href="/Themes/Basic/img/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/Themes/Basic/css/amazeui.min.css">
    <link rel="stylesheet" href="/Themes/Basic/css/classify.css">
    <link rel="stylesheet" href="/Themes/Basic/css/basic.css">
    <script src="/themes/basic/js/jquery-1.11.1.min.js"></script>
    <script src="/themes/basic/js/amazeui.min.js"></script>
    <script src="/themes/basic/js/handlebars.min.js"></script>
    <script src="/themes/basic/js/amazeui.widgets.helper.js"></script>
    <script src="/themes/basic/js/common.js"></script>
</head>
<body><div style="display:none;">
    <input type="hidden" id="hidLoginWebUrl" value="@JiChen.Core.ConfigCore.Instance.ConfigCommonEntity.LoginWebUrl" />
</div>
    <div class="classify"> 
        <header data-am-widget="header" class="am-header header">
            @Html.Partial("controls/_HeadBanner")
            <h1 class="am-header-title">
                <a href="javascript:void(0)">
                    分类
                </a>
            </h1>
        </header>
        <div class="classify-main">
            <div data-am-widget="tabs" class="am-tabs am-tabs-default"> 
                <ul class="am-tabs-nav am-cf">
                    <li class="am-active"><a  >常用产品分类</a></li>
                    @*<li class=""><a href="[data-tab-panel-1]">全车件</a></li>*@
                </ul> 
                <div class="am-tabs-bd">
                    <div data-tab-panel-0 class="am-tab-panel am-active">
                        <!------------内容列表的折叠面板开始--------------->
                        <section data-am-widget="accordion" class="am-accordion am-accordion-gapped" data-am-accordion='{  }' style="padding: 0;">
                            @{
                                IList<JiChen.Entities.VWClassesFoundEntity> list = JiChen.BLL.CatograyDB.ClassesFoundBLL.Instance.GetClassMenuAll((int)ViewBag.SiteId, (int)ViewBag.ClassMenuType, -1, false);
                                if (list != null && list.Count > 0)
                                {
                                    foreach (JiChen.Entities.VWClassesFoundEntity entity in list)
                                    {
                                        <dl class="am-accordion-item">
                                            <dt class="am-accordion-title">
                                                @entity.Name
                                            </dt>
                                            <dd class="am-accordion-bd am-collapse">
                                                <div class="am-accordion-content">
                                                    <a href="/MobileProduct/List?cl=@entity.Id"   class="classify-list-a">
                                                        <div class="classify-list">
                                                            全部
                                                        </div>
                                                    </a>
                                                    @if (entity.Children != null && entity.Children.Count > 0)
                                                    {
                                                        foreach (JiChen.Entities.VWClassesFoundEntity entity2 in entity.Children)
                                                        {
                                                            <a href="/MobileProduct/List?cl=@entity2.Id"   class="classify-list-a">
                                                                <div class="classify-list">
                                                                    @entity2.Name
                                                                </div>
                                                            </a>
                                                        }
                                                    }
                                                </div>
                                            </dd>
                                        </dl>
                                    }
                                }
                            }
                             
                        </section>

                        <!------------内容列表的折叠面板结束--------------->
                    </div>


                    <div data-tab-panel-1 class="am-tab-panel ">
                        <!------------内容列表的折叠面板开始--------------->
                        <section data-am-widget="accordion" class="am-accordion am-accordion-gapped" data-am-accordion='{  }' style="padding: 0;">
                            <!--------前保险杠开始----------->
                            <dl class="am-accordion-item">
                                <dt class="am-accordion-title">
                                    前保险杠
                                </dt>
                                <dd class="am-accordion-bd am-collapse">
                                    <!-- 规避 Collapase 处理有 padding 的折叠内容计算计算有误问题， 加一个容器 -->
                                    <div class="am-accordion-content">
                                        <!-------折叠内列表开始------->
                                        <a href="javascript:void(0)" class="classify-list-a">
                                            <div class="classify-list">
                                                全部
                                            </div>
                                        </a>
                                        <!---------折叠内列表结束---------->
                                    </div>
                                </dd>
                            </dl>
                            <!--------------前保险杠结束------->
                            <!--------后保险杠开始----------->
                            <dl class="am-accordion-item">
                                <dt class="am-accordion-title">
                                    后保险杠
                                </dt>
                                <dd class="am-accordion-bd am-collapse">
                                    <!-- 规避 Collapase 处理有 padding 的折叠内容计算计算有误问题， 加一个容器 -->
                                    <div class="am-accordion-content">
                                        <!-------折叠内列表开始------->
                                        <a href="javascript:void(0)" class="classify-list-a">
                                            <div class="classify-list">
                                                全部
                                            </div>
                                        </a>
                                        <!---------折叠内列表结束---------->
                                    </div>
                                </dd>
                            </dl>
                            <!---------后保险杠结束----------->
                            <!--------中网开始----------->
                            <dl class="am-accordion-item">
                                <dt class="am-accordion-title">
                                    中网
                                </dt>
                                <dd class="am-accordion-bd am-collapse">
                                    <!-- 规避 Collapase 处理有 padding 的折叠内容计算计算有误问题， 加一个容器 -->
                                    <div class="am-accordion-content">
                                        <!-------折叠内列表开始------->
                                        <a href="javascript:void(0)" class="classify-list-a">
                                            <div class="classify-list">
                                                全部
                                            </div>
                                        </a>
                                        <!---------折叠内列表结束---------->
                                    </div>
                                </dd>
                            </dl>
                            <!--------中网结束-------------->
                            <!------------前照灯开始------------>
                            <dl class="am-accordion-item">
                                <dt class="am-accordion-title">
                                    前照灯
                                </dt>
                                <dd class="am-accordion-bd am-collapse">
                                    <!-- 规避 Collapase 处理有 padding 的折叠内容计算计算有误问题， 加一个容器 -->
                                    <div class="am-accordion-content">
                                        <!-------折叠内列表开始------->
                                        <a href="javascript:void(0)" class="classify-list-a">
                                            <div class="classify-list">
                                                全部
                                            </div>
                                        </a>
                                        <!---------折叠内列表结束---------->
                                    </div>
                                </dd>
                            </dl>
                            <!------------前照灯结束------------->
                            <!------------后灯开始----------------->
                            <dl class="am-accordion-item">
                                <dt class="am-accordion-title">
                                    后灯
                                </dt>
                                <dd class="am-accordion-bd am-collapse">
                                    <!-- 规避 Collapase 处理有 padding 的折叠内容计算计算有误问题， 加一个容器 -->
                                    <div class="am-accordion-content">
                                        <!-------折叠内列表开始------->
                                        <a href="javascript:void(0)" class="classify-list-a">
                                            <div class="classify-list">
                                                全部
                                            </div>
                                        </a>
                                        <!---------折叠内列表结束---------->
                                    </div>
                                </dd>
                            </dl>
                            <!------------后灯结束----------------->

                        </section>

                        <!------------内容列表的折叠面板结束--------------->
                    </div>
                </div>
            </div>

        </div>

        <!-----------主体内容结束------------->
    </div>
    <!--------nav footer开始--------->
    @Html.Partial("controls/_FootBanner")
    @Html.Partial("controls/_BodyBefore")
</body>
</html>