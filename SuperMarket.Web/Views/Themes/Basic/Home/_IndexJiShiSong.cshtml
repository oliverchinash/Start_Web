                <li>
                    <a href="#">
                        <img src="http://images.ddbbqp.com/autoupload/banner/mobile/bannerxinyi.jpg">
                    </a>
                </li>
                <li>
                    <a href="#">
                        <img src="http://images.ddbbqp.com/autoupload/banner/mobile/bannerxinyi.jpg">
                    </a>
                </li>
            </ul>
        </div>
        <!----slider结束---->
        <!-----产品分类开始---->
        <div class="am-g home-list">
            <div class="am-u-sm-3">
                <a href="/MobileProduct/List?js=1&cl=4639">
                    <img src="~/Themes/Basic/img/propic/huohuasai.jpg" class="am-img-responsive">
                    <div class="">火花塞</div>
                </a>
            </div>
            <div class="am-u-sm-3">
                <a href="/MobileProduct/List?js=1&cl=4645">
                    <img src="~/Themes/Basic/img/propic/huohuasai.jpg" class="am-img-responsive">
                    <div class="">刹车片</div>
                </a>
            </div>
            <div class="am-u-sm-3">
                <a href="/MobileProduct/Categray">
                    <img src="/Themes/Basic/img/home_tp4.png" class="am-img-responsive">
                    <div class="">常规分类</div>
                </a>
            </div>
            <div class="am-u-sm-3">
                <a href="/MobileProduct/Categray?s=2">
                    <img src="http://images.ddbbqp.com/mobile/tubiao/shangyongche.png" class="am-img-responsive">
                    <div class="">商用车</div>
                </a>
            </div>
        </div>
        <!-----产品分类结束----> 
 
        @{
            IList<JiChen.Entities.VWProductFineEntity> listjinxuan = ViewBag.ListJinXuan;
            if (listjinxuan != null && listjinxuan.Count > 0)
            {
                <p class="home-faxian">易店心<span>·</span>精选</p>
                    <div class="am-g home-main5" id="divproductjingxuan">
                        @foreach (JiChen.Entities.VWProductFineEntity entity in listjinxuan)
                        { <div class="am-u-sm-6 home-main5-li">
                            <div class="home-main5-li-div">
                                <a href="/MobileProduct/Detail?pd=@(entity.ProductDetailId)">
                                    @if (!string.IsNullOrEmpty(entity.ProductDetail.PicUrlList))
                                    {
                                        <img src="@(JiChen.Core.ConfigCore.Instance.ConfigCommonEntity.ImagesServerUrl+entity.ProductDetail.PicUrlList)">
                                    }
                                    else
                                    {    <img src="/Themes/Basic/img/ImageError.jpg">
                                    }
                                    <div class="home-mian5-wz">
                                        <p>@entity.ProductDetail.AdTitle</p>
                                    </div>
                                </a>
                                @if (entity.Price > 0)
                                {
                                    <a href="/MobileProduct/Detail?pd=@(entity.ProductDetailId)" style="color: red; text-align: left">￥@entity.Price.ToString("0.00")</a>
                                }
                                else
                                {
                                    <a  style="cursor:pointer;" onclick="FunRedirectRegister()" style="color:red;text-align: left">注册看价格</a>
                                }
                            </div>
                        </div>
                        }
                    </div>
            }
        }
        <!-------精选结束------>
    </div>

  @Html.Partial("controls/_FootBanner")
  @Html.Partial("controls/_BodyBefore")
    
