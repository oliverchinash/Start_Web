@{
    Layout = "~/Views/Main/_Member_Master.cshtml";
    ViewBag.Title = "供应商退货管理";
    IList<SuperMarket.Model.VWCGOrderReturnEntity> _entitylist = ViewBag.entitylist;
}

<style type="text/css">
    .admin_detail a:link {
        color: blue;
    }

    .admin_detail a:hover {
        color: red;
    }

    .admin_detail a:visited {
        color: blue;
    }

